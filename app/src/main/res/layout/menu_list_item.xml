<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/menu_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Menu Item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_title_text_view"
        android:layout_alignLeft="@+id/menu_title_text_view"
        android:text="Description" />

    <TextView
        android:id="@+id/menu_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:layout_alignStart="@+id/menu_title_text_view"
        android:layout_below="@+id/menu_description_text_view"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_price_text_view"
        android:text="@string/menu_item_add_to_cart_button_text"
        android:id="@+id/menu_item_add_to_cart_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_price_text_view"
        android:layout_toRightOf="@+id/menu_item_add_to_cart_button"
        android:text="@string/menu_item_edit_button_text"
        android:id="@+id/menu_item_edit_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_price_text_view"
        android:layout_toRightOf="@+id/menu_item_edit_button"
        android:text="@string/menu_item_delete_button_text"
        android:id="@+id/menu_item_delete_button" />
</RelativeLayout>